@model TerminalMVC.Models.CommandTypesResponse

@{
    ViewData["Title"] = "Home Page";
}



<body>
    <p>Отправка команды на терминал</p>
    <form method="get" class="form" asp-controller="Home">
        <div class="row">
            <div class="col">
                <p>ID Терминала(ов)</p>
                <textarea id="id" class="idTerminal form-control"></textarea>@*
                <input type="text" name="id" class="form-control idTerminal" />*@
            </div>
            <div class="col">
               <p>Команда</p>
                <select id="commandId" ng-model="selectItem" class="form-select" aria-label="Default select example">

                    <option disabled selected hidden>Выберите команду</option>
                    @foreach(var item in Model.Items)
                    {
                        <option value="@item.Id" id="command" >@item.Name</option>

                    }
                    
                </select>
            </div>
        </div>
        <div id="parameters"></div>
        
    </form>

    <div class="text-center buttons">
        <button class="btn btn-secondary disabled" >Назад</button>
        <button onclick="myFunction()"class="btn btn-success" >Отправить</button>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Время</th>
                <th scope="col">Команда</th>
                <th scope="col">Параметр 1</th>
                <th scope="col">Параметр 2</th>
                <th scope="col">Параметр 3</th>
                <th scope="col">Статус</th>
            </tr>
        </thead>
        <tbody id ="History">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Время</th>
                <th scope="col">Команда</th>
                <th scope="col">Параметр 1</th>
                <th scope="col">Параметр 2</th>
                <th scope="col">Параметр 3</th>
                <th scope="col">Статус</th>
            </tr>
            
        </tbody>
    </table>

    <script src="~/js/site.js"></script>
    
    
</body>


